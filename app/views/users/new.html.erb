<div class="wrapper">
	<div id="description">
  <%= render "text" %>  
	<div id="form">
		<%= simple_form_for @user, :remote => true do |f| %>
		  <%= f.input :first, :placeholder => "First Name"%>
		  <%= f.input :last, :placeholder => "Last Name" %>
		  <%= f.input :email, :placeholder => "Email Address" %>
		  <%= f.input :zip_code, :placeholder => "Your Zip Code" %>
		  <%= f.input :comment, :placeholder => "Comment" %>
		  <%= f.input :image %>
		  <%= f.button :submit, 'SEND!', :class => "button positive" %>
		<% end %>     
	</div>
</div>
